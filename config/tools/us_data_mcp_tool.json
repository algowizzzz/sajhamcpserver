{
  "name": "us_data_tool",
  "module": "tools.us_data_mcp_tool.USDataMCPTool",
  "max_hits": 100,
  "max_hit_interval": 10,
  "tool_description": {
    "tools": [
      {
        "name": "search_datasets",
        "description": "Search US government datasets on data.gov",
        "input_schema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query for datasets"
            },
            "rows": {
              "type": "integer",
              "description": "Number of results to return (1-1000)",
              "default": 10,
              "minimum": 1,
              "maximum": 1000
            },
            "start": {
              "type": "integer",
              "description": "Starting position for pagination",
              "default": 0
            },
            "sort": {
              "type": "string",
              "description": "Sort field (score, metadata_modified, views_recent)",
              "default": "score desc"
            }
          },
          "required": ["query"]
        }
      },
      {
        "name": "get_dataset",
        "description": "Get detailed information about a specific dataset",
        "input_schema": {
          "type": "object",
          "properties": {
            "dataset_id": {
              "type": "string",
              "description": "Dataset ID or name"
            }
          },
          "required": ["dataset_id"]
        }
      },
      {
        "name": "get_dataset_resources",
        "description": "Get all resources (files, APIs) for a dataset",
        "input_schema": {
          "type": "object",
          "properties": {
            "dataset_id": {
              "type": "string",
              "description": "Dataset ID or name"
            }
          },
          "required": ["dataset_id"]
        }
      },
      {
        "name": "list_organizations",
        "description": "List all US government organizations/agencies",
        "input_schema": {
          "type": "object",
          "properties": {
            "all_fields": {
              "type": "boolean",
              "description": "Return all fields for organizations",
              "default": false
            },
            "limit": {
              "type": "integer",
              "description": "Number of organizations to return",
              "default": 100
            }
          }
        }
      },
      {
        "name": "get_organization",
        "description": "Get information about a specific organization/agency",
        "input_schema": {
          "type": "object",
          "properties": {
            "org_id": {
              "type": "string",
              "description": "Organization ID or name"
            },
            "include_datasets": {
              "type": "boolean",
              "description": "Include datasets from this organization",
              "default": false
            }
          },
          "required": ["org_id"]
        }
      },
      {
        "name": "search_by_organization",
        "description": "Search datasets by organization/agency",
        "input_schema": {
          "type": "object",
          "properties": {
            "org_name": {
              "type": "string",
              "description": "Organization name or ID"
            },
            "rows": {
              "type": "integer",
              "description": "Number of results",
              "default": 10
            }
          },
          "required": ["org_name"]
        }
      },
      {
        "name": "list_groups",
        "description": "List all dataset groups/categories",
        "input_schema": {
          "type": "object",
          "properties": {
            "all_fields": {
              "type": "boolean",
              "description": "Return all fields",
              "default": false
            }
          }
        }
      },
      {
        "name": "get_group",
        "description": "Get information about a specific group/category",
        "input_schema": {
          "type": "object",
          "properties": {
            "group_id": {
              "type": "string",
              "description": "Group ID or name"
            }
          },
          "required": ["group_id"]
        }
      },
      {
        "name": "get_recent_datasets",
        "description": "Get recently updated datasets",
        "input_schema": {
          "type": "object",
          "properties": {
            "rows": {
              "type": "integer",
              "description": "Number of datasets to return",
              "default": 10
            }
          }
        }
      },
      {
        "name": "get_popular_datasets",
        "description": "Get most popular/viewed datasets",
        "input_schema": {
          "type": "object",
          "properties": {
            "rows": {
              "type": "integer",
              "description": "Number of datasets to return",
              "default": 10
            }
          }
        }
      },
      {
        "name": "search_by_tag",
        "description": "Search datasets by tag",
        "input_schema": {
          "type": "object",
          "properties": {
            "tag": {
              "type": "string",
              "description": "Tag to search for"
            },
            "rows": {
              "type": "integer",
              "description": "Number of results",
              "default": 10
            }
          },
          "required": ["tag"]
        }
      },
      {
        "name": "get_dataset_statistics",
        "description": "Get statistics about data.gov datasets",
        "input_schema": {
          "type": "object",
          "properties": {}
        }
      },
      {
        "name": "search_by_format",
        "description": "Search datasets by file format (CSV, JSON, XML, etc.)",
        "input_schema": {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "description": "File format (CSV, JSON, XML, PDF, etc.)"
            },
            "rows": {
              "type": "integer",
              "description": "Number of results",
              "default": 10
            }
          },
          "required": ["format"]
        }
      },
      {
        "name": "get_dataset_metadata",
        "description": "Get comprehensive metadata for a dataset",
        "input_schema": {
          "type": "object",
          "properties": {
            "dataset_id": {
              "type": "string",
              "description": "Dataset ID or name"
            }
          },
          "required": ["dataset_id"]
        }
      },
      {
        "name": "list_tags",
        "description": "List all available tags",
        "input_schema": {
          "type": "object",
          "properties": {
            "limit": {
              "type": "integer",
              "description": "Number of tags to return",
              "default": 100
            }
          }
        }
      },
      {
        "name": "search_by_date_range",
        "description": "Search datasets modified within a date range",
        "input_schema": {
          "type": "object",
          "properties": {
            "start_date": {
              "type": "string",
              "description": "Start date (YYYY-MM-DD)"
            },
            "end_date": {
              "type": "string",
              "description": "End date (YYYY-MM-DD)"
            },
            "rows": {
              "type": "integer",
              "description": "Number of results",
              "default": 10
            }
          },
          "required": ["start_date", "end_date"]
        }
      },
      {
        "name": "advanced_search",
        "description": "Advanced search with multiple filters",
        "input_schema": {
          "type": "object",
          "properties": {
            "query": {
              "type": "string",
              "description": "Search query"
            },
            "organization": {
              "type": "string",
              "description": "Filter by organization"
            },
            "tags": {
              "type": "array",
              "description": "Filter by tags",
              "items": {
                "type": "string"
              }
            },
            "format": {
              "type": "string",
              "description": "Filter by format"
            },
            "rows": {
              "type": "integer",
              "description": "Number of results",
              "default": 10
            }
          }
        }
      }
    ],
    "resources": [],
    "prompts": []
  }
}